<ul class="media-list">
  <% posts.each do |post| %>
    <li class="media">
      <div class="media-left">
        <%= link_to image_tag(post.image, {size: 250}), post %>
        <%= render "likes/like_button", post: post %>
        <%= render "posts/del_button", post: post %>
        
    　  
      </div>
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 50 }) %>" alt="">
      </div>
      
      <div class="media-body">
        <div>
          <p>投稿者：<%= link_to post.user.name, user_path(post.user) %></p>
        </div>
        <div>
          <p>撮影場所：<%= post.location %></p>
        </div>
        <div>
          <p><%= link_to "GoogleMapで開く", "https://www.google.com/maps?q="+post.location, :target=>["_blank"] %></p>
        </div>
        <div>
           <span class="text-muted">撮影日時：<%= post.date %></span>
        </div>
        <div>
           <span class="text-muted">投稿日時：<%= post.created_at %></span>
        </div>
        
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>
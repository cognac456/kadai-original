<h1>ランキング</h1>
<% if @posts.present? %>
  <div class="row">
    <% @posts.each_with_index do |post, index| %>
      <div class="post">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
            <%#  <img src="<%= post.image_url %><%#" alt="" >   %>
            <%= link_to image_tag(post.image, {size: 250}), post %>
            </div>
            <div class="panel-body">
        <%#      <p class="post-title"><%= link_to post.image, post %></p>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render 'likes/like_button', post: post %>
                <% end %>
                <%= render "posts/del_button", post: post %>
              </div>
            </div>
            <div class="panel-footer">
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[post.id] %> Likes</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>